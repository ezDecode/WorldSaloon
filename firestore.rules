rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Bookings: Anyone can create a new booking.
    match /bookings/{bookingId} {
      allow create;
      allow read, update, delete: if false; // Can't be read, updated or deleted publicly
    }

    // Testimonials: Anyone can read and create testimonials.
    match /testimonials/{testimonialId} {
      allow read, write;
      allow update, delete: if false; // Can't be updated or deleted publicly
    }
  }
}