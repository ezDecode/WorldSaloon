rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Bookings:
    // - Allow anyone to create a new booking (for the form to work).
    // - Deny read/write access to the entire collection to protect user data.
    //   Individual document access is not needed on the client.
    match /bookings/{bookingId} {
      allow create: if true;
      allow read, write: if false;
    }

    // Testimonials:
    // - Allow anyone to create a new testimonial.
    // - Allow anyone to read the list of testimonials.
    // - Deny updates and deletes from the client-side.
    match /testimonials/{testimonialId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if false;
    }
  }
}
